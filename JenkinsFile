pipeline {
    agent any

    tools {
        // Install the Maven version configured as "M3" and add it to the path.
        maven "M2_Home"
    }

    stages {
         
        stage('Build') {
            steps {
                sh "mvn clean package -DskipTests=true"
                
            }
        }
        stage('Run Tests') {
            steps {
                sh "mvn -P LoginTesting test"
                
            }
			post {
    always {
      testNG()
    }
  }
    }
     
    }
}
